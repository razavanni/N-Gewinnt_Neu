        <Label Content="N&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="225" Canvas.Top="91"/>
        <Label Content="Reihen" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="123" Canvas.Top="91"/>
